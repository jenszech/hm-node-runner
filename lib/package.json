{
    "name": "hm-node-runner",
    "version": "0.8.0",
    "description": "A homematic nodejs script runner",
    "author": {
        "name": "Jens Zech",
        "email": "jzech@gmx.de",
        "url": "https://github.com/jenszech"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jenszech/"
    },
    "license": "MIT",
    "main": "src/main.ts",
    "scripts": {
        "start": "node ./lib/hm-node-runner",
        "start:ts": "set NODE_ENV=dev ts-node src/main.ts",
        "start:dev": "set NODE_ENV=dev nodemon src/main.ts",
        "deploy": "pm2 restart statusLight",
        "test": "jest --config jestconfig.json",
        "build": "tsc",
        "format": "prettier --write \"**/*.ts\"",
        "lint": "tslint -p tsconfig.json",
        "preversion": "npm run lint",
        "version": "npm run format && git add -A src",
        "postversion": "git push && git push --tags && npm run build"
    },
    "dependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/express": "^4.17.8",
        "app-root-path": "^3.0.0",
        "config": "^3.3.2",
        "express": "^4.17.1",
        "km200-api": "^0.2.3",
        "homematic-js-xmlapi": "^0.8.1",
        "influx": "^5.6.3",
        "winston": "^3.3.3",
        "serialport": "^9.0.2",
        "@serialport/parser-inter-byte-timeout": "^9.0.1",
        "easy-crc": "^0.0.2"
    },
    "devDependencies": {
        "@types/config": "^0.0.36",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.10",
        "@types/serialport": "^8.0.1",
        "expect": "^26.5.3",
        "jest": "^26.5.3",
        "nodemon": "^2.0.5",
        "prettier": "^2.1.2",
        "ts-jest": "^26.4.1",
        "ts-node": "^9.0.0",
        "tslint": "^6.1.3",
        "tslint-config-prettier": "^1.18.0",
        "typescript": "^4.0.3"
    },
    "optionalDependencies": {
        "fsevents": "^2.1.3"
    }
}
